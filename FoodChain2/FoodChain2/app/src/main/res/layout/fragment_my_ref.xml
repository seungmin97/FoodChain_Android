<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#BDEB64">

        <TextView
            android:layout_width="68dp"
            android:layout_height="18dp"
            android:text="나의 냉장고"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="23.15dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17.5dp"
            />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20.3dp"
        android:layout_marginLeft="15.3dp"
        android:layout_marginRight="15.3dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginBottom="8dp"
            android:background="#EFF1F3">
            
            <ImageView
                android:layout_width="34.5dp"
                android:layout_height="34.5dp"
                android:layout_marginLeft="8.5dp"
                android:layout_centerVertical="true"/>
            
            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="35dp"
                android:layout_marginLeft="60.5dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품을 등록해보세요."
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스캔을 통해 쉽게 등록하고, 유통기한을 관리하세요!"
                    android:textColor="#000000"
                    android:textSize="11dp"/>

            </LinearLayout>


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>