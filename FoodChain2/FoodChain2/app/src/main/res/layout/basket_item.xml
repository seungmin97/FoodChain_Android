<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">
        
        <ImageView
            android:id="@+id/basket_item_checked_iv"
            android:layout_width="24.2dp"
            android:layout_height="24.2dp"
            android:layout_marginLeft="15.3dp"/>

        <ImageView
            android:id="@+id/basket_item_iv"
            android:layout_width="70.85dp"
            android:layout_height="70.85dp"
            android:layout_toRightOf="@+id/basket_item_checked_iv"
            android:layout_marginLeft="10.3dp"
            android:layout_marginTop="10.3dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/basket_item_iv"
            android:layout_marginTop="10.3dp"
            android:layout_marginLeft="17.23dp"
            />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            >
            
            <TextView
                android:id="@+id/basket_item_count_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="수량"
                android:textSize="14dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="금액"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/basket_item_count_txt"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginRight="25dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        >

        <TextView
            android:id="@+id/basket_item_total_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="총 상품금액"
            android:textSize="14dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="할인 금액"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginRight="25dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="결제 금액"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />

    </RelativeLayout>

</LinearLayout>