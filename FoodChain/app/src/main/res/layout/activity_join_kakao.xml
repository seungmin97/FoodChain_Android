<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46.8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="회원가입"
            android:gravity="center"
            android:textColor="#000000" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView

            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/join_user_btn"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/consumer"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_alignBottom="@id/join_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소비자 회원가입"

            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView

            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/join_master_btn"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/farmer"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_alignBottom="@id/join_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사장님 회원가입"

            android:textSize="14dp"/>
    </LinearLayout>

</LinearLayout>