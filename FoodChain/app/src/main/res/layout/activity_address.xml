<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="우리 동네 찾기"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="32dp">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/search_icon" />

        <EditText
            android:id="@+id/address_search_keyword"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/searchIcon"
            android:background="@android:color/transparent"
            android:hint="예) 성북동"
            android:textColorHint="#DCDCDC"
            android:textSize="12dp"
            />



        <ImageView
            android:id="@+id/address_location_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/small_pin" />


        <View
            android:id="@+id/line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="54dp"
            />

        <View
            android:layout_width="500dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentBottom="true"
            android:background="#BDBDBD"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/address_result_keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:textColor="#D42A2A"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/address_frame">

    </FrameLayout>

</LinearLayout>