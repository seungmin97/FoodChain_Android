<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12.5dp"
            android:text="관심상품"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/choice_confirm_tv"
            android:layout_width="22dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:layout_marginTop="12.5dp"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18.5dp"
            android:text="- 2개 선택해주세요 -"
            android:textColor="#000000"
            android:textSize="11dp" />

    </RelativeLayout>

    //그리드 레이아웃 설정

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_centerHorizontal="true"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:columnCount="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/category0_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_0a"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category0_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_0b"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category1_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_1a"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category1_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_1b"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category1_c"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_1c"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category1_d"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_1d"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_2"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category3_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_3a"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category3_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_3b"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category3_c"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_3c"
                    android:layout_marginBottom="10dp"/>


                <ImageView
                    android:id="@+id/category4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_4"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category5_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_5a"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category5_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_5b"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category6_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_6a"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category6_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_6b"
