                    android:src="@drawable/cate_6d"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category6_e"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_6e"
                    android:layout_marginBottom="10dp"/>


                <ImageView
                    android:id="@+id/category7_a"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_7a"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/category7_b"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cate_7b"
                    android:layout_marginBottom="10dp"/>

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>