<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bottombar_topbar"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#BDeb64">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SearchView
                    android:id="@+id/bottombar_search"
                    android:layout_width="216.95dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="70.85dp"
                    android:layout_marginTop="6.72dp"
                    android:background="#ffffff"
                    android:iconifiedByDefault="true"></SearchView>

                <ImageView
                    android:id="@+id/bottombar_heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="11.88dp"
                    android:layout_marginTop="13.44dp"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/bottombar_basket"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9.48dp"
                    android:layout_marginTop="12.48dp"
                    android:src="@drawable/basket" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6.96dp"
                android:layout_marginTop="16.29dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:background=""
                    android:id="@+id/tophome"
                    android:text="홈"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:background=""
                    android:id="@+id/topsale"
                    android:text="타임세일"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/market"
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:background=""
                    android:text="주변마켓"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="120dp"
                    android:id="@+id/view1"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="120dp"
                    android:id="@+id/view2"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="120dp"
                    android:id="@+id/view3"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="485dp"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_tab"
        android:background="#faf9fa"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            //이미지 없음
            <ImageView
                android:id="@+id/page_store_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/tab_store"
                />

            <ImageView
                android:id="@+id/page_ref_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/tab_my_ref"
                />

            <ImageView
                android:id="@+id/page_alarm_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/tab_alarm"
                />

            <ImageView
                android:id="@+id/page_setting_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/tab_setting"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
