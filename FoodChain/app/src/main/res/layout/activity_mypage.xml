<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/onepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/page"
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:text="마이페이지" />

        <ImageView
            android:id="@+id/page_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/page"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/box" />

        <ImageView
            android:id="@+id/page_plus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/page"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/page_name"
            android:layout_width="32dp"
            android:layout_height="21dp"
            android:layout_below="@+id/page_image"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="준우"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient
                    android:startColor="@android:color/transparent"
                    android:endColor="#ffe6e6e6"
                    android:angle="270">
                </gradient>
            </shape>

            <TextView
                android:id="@+id/page_level"
                android:layout_width="48dp"
                android:layout_height="16dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="21dp"
                android:text="회원등급"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/page_level"
                android:textColor="#000000"
                android:text="GOLD" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/level"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="176dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    >
                    <shape xmlns:android="http://schemas.android.com/apk/res/android">
                        <gradient
                            android:startColor="@android:color/transparent"
                            android:endColor="#ffe6e6e6"
                            android:angle="270">
                        </gradient>
                    </shape>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용가능한 포인트"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="13dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000포인트"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="176dp"
                    android:layout_height="86dp"
                    android:layout_weight="1">

                    <shape xmlns:android="http://schemas.android.com/apk/res/android">
                        <gradient
                            android:startColor="@android:color/transparent"
                            android:endColor="#ffe6e6e6"
                            android:angle="270">
                        </gradient>
                    </shape>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용가능한 쿠폰"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="13dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10장"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/buy_box"/>
        <ImageButton
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/zzim_box"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/my_box"/>
        <ImageButton
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/wish_box"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kakaobox"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>